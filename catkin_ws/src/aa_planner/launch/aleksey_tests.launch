<launch>
    <arg name="mode" default="rounded_square" />
    <arg name="record" default="true" />

    # Hardware
    <include file="$(find hardware)/hardware.launch" />

    # Localization
    <include file="$(find localization)/localization.launch" />

    # RL-based planner to be urn using python command


    # Rosbag data collection
    <node pkg="rosbag" type="record" name="rosbag_record_ffast"
        args="record -o /home/nvidia/Documents/rosbags/wp2 /ekf_localization/odom /commands/keyboard aa_planner/waypoints /imu"
        if="$(arg record)" />
</launch>
